{
  "compilerOptions": {
    // "baseUrl": ".",
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6", "dom", "es2019"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true, // should be true in future
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "./__generated__/**/*"],
  "exclude": ["node_modules", "private", "public", "storybook-static"]
}
